<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport"
        content="width=device-width, initial-scale=1.0">
  <title>Taskmin | Minimalist Task Management</title>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;700&display=swap"
        rel="stylesheet">
  <link rel="stylesheet"
        type="text/css"
        href="/assets/css/_remake.css">
  <link rel="stylesheet"
        type="text/css"
        href="/assets/css/main.css">
</head>

<body>
  <nav class="nav">
    <div class="nav__container">
      <a class="logo"
         href="{{#if currentUser}}/{{currentUser.details.username}}{{else}}/{{/if}}">
        <img class="logo__image"
             src="/assets/images/logo.svg">
        <span class="logo__text">Taskmin</span>
      </a>
      {{#if currentUser}}
      <div class="nav__user">
        <div>
          Signed in as
          <a class="nav__user-link"
             href="{{currentUser.details.username}}"
             class="nav__user">{{currentUser.details.username}}
          </a>
        </div>
        <a class="btn btn--primary nav__button"
           href="/user/logout">Logout</a>
      </div>
      {{else}}
      <div class="nav__user">
        <a class="nav__link"
           href="/user/login">Log in</a>
        <a class="btn btn--primary nav__button"
           href="/user/signup">Sign up</a>
      </div>
      {{/if}}
    </div>
  </nav>
  <main>
    {{> yield }}
  </main>
  {{#if isPageAuthor}}
  {{!-- Prevent loading the Remake framework if the page isn't editable --}}
  <script src="/assets/js/vendor/Sortable.min.js"></script>
  <script src="/assets/js/vendor/crostini.min.js"></script>
  <script src="/remake/js/remake.min.js"></script>
  <script src="/assets/js/remake-init.js"></script>
  {{/if}}
  <script src="/assets/js/main.js"
          type="module"></script>
</body>

</html>