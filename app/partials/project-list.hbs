<div class="list">
  <header class="list__header">
    <h2 class="list__heading">My Projects</h2>
    <button class="dash-btn"
            aria-label="Add Project">
      <svg width="26"
           height="26"
           viewBox="0 0 26 26"
           fill="none"
           xmlns="http://www.w3.org/2000/svg"
           class="dash-btn__plus">
        <line x1="13"
              y1="4.37114e-08"
              x2="13"
              y2="26"
              stroke="#44AB96"
              stroke-width="2" />
        <line x1="26"
              y1="13"
              x2="-8.74228e-08"
              y2="13"
              stroke="#44AB96"
              stroke-width="2" />
      </svg>
    </button>
  </header>
  <ul array
      key="projects"
      class="list__ul"
      sortable>
    {{#for project in projects}}
    <li object
        key:project-name="@search"
        key:project-color="@search"
        key:id="{{ project.id }}"
        default:project-name="Project Name"
        class="list-item">
      <div class="list-item__line-container"
           tabindex="0">
        <label target:project-name="@innerText"
               target:project-color="@attr:data-color-id"
               update:tab="{{ project.id }}"
               class="list-item__label list-item__label--color-id"
               data-color-id="{{ project.projectColor }}">
          {{ project.projectName }}
        </label>
        <div class="list-item__btns-container">
          <button class="list-item__btn"
                  aria-label="Edit"
                  edit:project-name>
            <img src="/assets/images/pencil-fill.svg"
                 alt="">
          </button>
          <button class="list-item__btn"
                  aria-label="Delete"
                  remove>
            <img src="/assets/images/trash.svg"
                 alt="">
          </button>
        </div>
      </div>
    </li>
    {{/for}}
  </ul>
</div>